<script>
  let path = location.pathname;
  let control = $('.nav-item');
  control.removeClass('active');
  if (path == "/products") {
    let control = $(`#products-menu-item`);
    control.addClass('active');
  } else if (path == "/contact") {
    let control = $(`#contact-menu-item`);
    control.addClass('active');
  } else {
    let control = $(`#home-menu-item`);
    control.addClass('active');
  }
</script>