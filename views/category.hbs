<script>
  let urlParams = new URLSearchParams(location.search);
  let params = {
    category: 0,
    brand: 0,
    color: 0,
    min: 0,
    max: 100,
    sort: 'name',
    limit: 9,
    search: '',
    page: 1
  };

  for (let key in params) {
    if (!urlParams.has(key)) {
      urlParams.append(key, params[key]);
    }
  }



  $(document).ready(() => {
    let checkboxes = ['category', 'color', 'brand'];
    for (let key of checkboxes) {
      let control = $(`#${key}${urlParams.get(key)}`);
      if (control) {
        $(control).prop('checked', true);
      }
    }

    $(`#sortControl`).val(urlParams.get('sort'));
    $(`#limitControl`).val(urlParams.get('limit'));
    $('#searchKeyword').val(urlParams.get('search'));

    let savePage = urlParams.get('page');
    $('#pagination li').addClass('page-item');
    $('#pagination li a').addClass('page-link');
    $('#pagination li a').each((index, item) => {
      let page = $(item).attr('href').split('=')[1];
      urlParams.set('page', page);
      let href = `/products?${urlParams.toString()}`;
      $(item).attr('href', href);
    });

    urlParams.set('page', savePage);
  });

  function selectParam(key, value = 0, reset = false) {
    if (reset) {
      for (let key in params) {
        urlParams.set(key, params[key]);
      }
    }

    urlParams.set(key, value);
    let url = `/products?${urlParams.toString()}`;
    location.href = url;
  }
</script>